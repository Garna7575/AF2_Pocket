<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título con contraste mejorado -->
        <TextView
            android:id="@+id/voteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título de la votación"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_900"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Descripción con espaciado mejorado -->
        <TextView
            android:id="@+id/voteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción de la votación"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3" />

        <!-- Botón con estilo material -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVote"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Votar"
            android:textColor="@color/white"
            app:backgroundTint="@color/teal_700"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_vote"
            app:iconTint="@color/white"
            app:iconPadding="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>