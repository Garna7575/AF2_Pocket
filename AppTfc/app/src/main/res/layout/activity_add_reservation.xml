<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Selector de fecha -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha seleccionada"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSelectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Selector de hora INICIO -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora de inicio"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Contenedor principal para hora y minutos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- Selector de Hora -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hora:"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDecreaseStartHour"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="-"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                            <TextView
                                android:id="@+id/tvStartHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="09"
                                android:textSize="20sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnIncreaseStartHour"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="+"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Selector de Minutos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Minutos:"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDecreaseStartMinute"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="-"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                            <TextView
                                android:id="@+id/tvStartMinute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="00"
                                android:textSize="20sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnIncreaseStartMinute"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="+"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Selector de hora FIN -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora de fin"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Contenedor principal para hora y minutos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- Selector de Hora -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hora:"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDecreaseEndHour"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="-"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                            <TextView
                                android:id="@+id/tvEndHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="10"
                                android:textSize="20sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnIncreaseEndHour"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="+"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Selector de Minutos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Minutos:"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDecreaseEndMinute"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="-"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                            <TextView
                                android:id="@+id/tvEndMinute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="00"
                                android:textSize="20sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnIncreaseEndMinute"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="+"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Lista de zonas comunes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Zonas comunes disponibles"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCommonAreas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="200dp"
            tools:listitem="@layout/item_common_area" />

        <!-- Botón de confirmación -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Confirmar reserva"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>
</ScrollView>